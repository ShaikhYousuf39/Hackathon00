# ============================================
# RAG Chatbot Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# -----------------
# API Keys
# -----------------

# Cohere API Key (for embeddings)
COHERE_API_KEY=your_cohere_api_key_here

# Qdrant Configuration (Vector Database)
QDRANT_URL=https://your-qdrant-instance.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# Gemini API Key (for LLM responses)
Gemini_Api_Key=your_gemini_api_key_here

# Optional: OpenRouter as fallback
OPENROUTER_API_KEY=your_openrouter_api_key_here

# -----------------
# Database Configuration
# -----------------

# PostgreSQL Database URL (Neon, Railway, or local)
# Format: postgresql://username:password@host:port/database
# For local SQLite (development only), leave empty or use:
# DATABASE_URL=sqlite:///./chat_history.db
DATABASE_URL=postgresql://user:password@host:5432/chatbot_db

# -----------------
# Server Configuration
# -----------------

# Backend server host and port
HOST=0.0.0.0
PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# -----------------
# Processing Configuration
# -----------------

# Text chunking parameters
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Rate limiting for API calls
RATE_LIMIT_DELAY=1.0

# -----------------
# Optional Configuration
# -----------------

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Production mode (set to 'true' in production)
PRODUCTION=false

# Sentry DSN (for error tracking in production)
# SENTRY_DSN=your_sentry_dsn_here
